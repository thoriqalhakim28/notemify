<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="org.d3if3139.notemify.ui.DashboardFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="org.d3if3139.notemify.ui.AddFragment"
        android:label="New Note"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_addNoteFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="org.d3if3139.notemify.ui.UpdateFragment"
        android:label="Update Note"
        tools:layout="@layout/fragment_update">
        <action
            android:id="@+id/action_updateNoteFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />

        <argument
            android:name="note"
            app:argType="org.d3if3139.notemify.model.Note"
            app:nullable="true"
            />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if3139.notemify.ui.AboutFragment"
        android:label="About App"
        tools:layout="@layout/fragment_about">

        <action
            android:id="@+id/action_aboutFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"/>
    </fragment>

</navigation>